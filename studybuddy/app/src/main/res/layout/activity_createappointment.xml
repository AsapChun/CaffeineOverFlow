<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAppointment"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/txtTutorInformation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Set Tutor Subject for "
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtTutorPrice"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="423dp"
        android:text="Enter your rate per hour ($):"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDaysAvailable"
        android:layout_width="275dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="296dp"
        android:text="Select Available Days"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSelectDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="146dp"
        android:text="Select Day"
        android:background="@color/white"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txtDaysChoosen"
        android:layout_width="233dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginBottom="140dp"
        android:text="Days Selected:"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnCreateTutorAppt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="48dp"
        android:text="Create Tutor Subject"
        android:background="@color/white"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="48dp"
        android:background="@color/white"
        android:text="Back"
        android:textColor="@color/colorPrimary" />

    <Spinner
        android:id="@+id/spinDaTes"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="229dp" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="562dp"
        android:text="Select Location"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="326dp"
        android:ems="10"
        android:inputType="phone" />

    <Spinner
        android:id="@+id/spinLocation"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="493dp" />

</RelativeLayout>