<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ManageAccountActivity"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/btnAddCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="393dp"
        android:text="Add" />

    <TextView
        android:id="@+id/txtAddCourses"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="465dp"
        android:text="Add Courses"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinCourses"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="397dp" />

    <TextView
        android:id="@+id/txtAddTutorCourses"
        android:layout_width="409dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="305dp"
        android:text="Add Tutor Subjects"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <Spinner
        android:id="@+id/spinTutorSubjects"
        android:layout_width="267dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="236dp" />

    <Button
        android:id="@+id/btnAddTutorCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="232dp"
        android:text="ADD"
        android:background="@color/white"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txtFindTutors"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="153dp"
        android:text="Find Tutors"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinFindTutors"
        android:layout_width="274dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="85dp" />

    <Button
        android:id="@+id/btnAddTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:background="@color/white"
        android:text="ADD"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnRETURN"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="276dp"
        android:layout_marginBottom="7dp"
        android:text="Back"
        android:background="@color/white"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txtAccountManagment"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="550dp"
        android:text="Account Management"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />
</RelativeLayout>