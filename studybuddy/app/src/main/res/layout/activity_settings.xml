<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/txtSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="0dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#FCFCF9F9"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnNewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:text="Back"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnChangeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="430dp"
        android:background="@color/white"
        android:text="Confirm"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtChangeUsername"
        android:layout_width="356dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="571dp"
        android:text="Change Profile"
        android:textAlignment="center"
        android:textColor="#FCFCF9F9"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtOldEmail"
        android:layout_width="93dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="531dp"
        android:text="Old Email"
        android:textColor="#FCFCF9F9"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtNewEmail"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="487dp"
        android:text="New Email"
        android:textColor="#FCFCF9F9"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtNewUsername"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="487dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FCFCF9F9"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtChangePassword"
        android:layout_width="356dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="380dp"
        android:text="Change Password"
        android:textAlignment="center"
        android:textColor="#FCFCF9F9"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtOldPassword"
        android:layout_width="93dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="314dp"
        android:text="New Password"
        android:textAlignment="center"
        android:textColor="#FCFCF9F9"
        android:textSize="18sp"
        tools:text="New Password" />

    <TextView
        android:id="@+id/txtNewPassword"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="248dp"
        android:text="Confirm New Password"
        android:textAlignment="center"
        android:textColor="#FCFCF9F9"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtNewPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="259dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FCFCF9F9"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="204dp"
        android:background="@color/white"
        android:text="Confirm"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/icn_24_settings" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="321dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FCFCF9F9" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="543dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FCFCF9F9" />

    <TextView
        android:id="@+id/txtDeleteAccount"
        android:layout_width="356dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="158dp"
        android:text="Delete Account"
        android:textAlignment="center"
        android:textColor="#FCFCF9F9"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <CheckBox
        android:id="@+id/cbConfirm"
        android:layout_width="379dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="118dp"
        android:text="I Understand This Cannot Be Undone"
        android:textColor="#FCFCF9F9"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="63dp"
        android:text="@string/delete"
        android:background="@color/white"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>